<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Add ISA insectoid to hives -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName="Hive"]/comps/li[@Class = "CompProperties_SpawnerPawn"]/spawnablePawnKinds</xpath>
    <value>
      <li>ISA_Gigapede</li>
      <li>ISA_Gigaspider</li>
      <li>ISA_Gigabeetle</li>
    </value>
  </Operation>

</Patch>

<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Core rimworld patches -->
  
  <!-- Armor Insulation patches -->
  
<Operation Class="PatchOperationReplace">
  <xpath>/Defs/ThingDef[@defName="ApparelArmorReconBase"]/statBases/Insulation_Cold</xpath>
  <value>
    <Insulation_Cold>46</Insulation_Cold>
  </value>
</Operation>
  

<Operation Class="PatchOperationReplace">
  <xpath>/Defs/ThingDef[@defName="ApparelArmorPowerBase"]/statBases/Insulation_Cold</xpath>
  <value>
    <Insulation_Cold>50</Insulation_Cold>
  </value>
</Operation>
  
<!-- Royalty DLC patches -->
  
  <!-- Armor Insulation patches --> 
  
<Operation Class="PatchOperationFindMod">     <!-- Find mod/dlc to patch -->
  <mods>
    <li>Ludeon.Rimworld.Royalty</li>
  </mods>
  <match Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/Insulation_Cold</xpath>
            <value>
              <Insulation_Cold>100</Insulation_Cold>
            </value>
  </match>
  </Operation>
  
  <!-- Psycast patches -->
  
  <Operation Class="PatchOperationFindMod">     <!-- Find mod/dlc to patch -->
  <mods>
    <li>Ludeon.Rimworld.Royalty</li>
  </mods>
  <match Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName = "SolarPinhole"]/comps</xpath>
            <value>
              <overlightRadius>7.0</overlightRadius>
            </value>
  </match>
  </Operation>
</Patch>

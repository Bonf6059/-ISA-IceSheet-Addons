<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
<!-- Royalty DLC patches -->
  
  <!-- Armor Insulation patches --> 
  
<Operation Class="PatchOperationFindMod">     <!-- Find mod/dlc to patch -->
  <mods>
    <li>Ludeon.Rimworld.Royalty</li>
  </mods>
  <match Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="ApparelArmorCataphractBase"]/Insulation_Cold</xpath>
            <value>
              <Insulation_Cold>100</Insulation_Cold>
            </value>
  </match>
  </Operation>
  
  <!-- Psycast patches -->
  
  <Operation Class="PatchOperationFindMod">     <!-- Find mod/dlc to patch -->
  <mods>
    <li>Ludeon.Rimworld.Royalty</li>
  </mods>
  <match Class="PatchOperationReplace">   <!-- Guarda la mod more [fsf] psycastpowers per problemi -->
				<xpath>/Defs/ThingDef[defName = "SolarPinhole"]/comps/li[@Class = "CompProperties_Glower"]</xpath>
				<value>
					<li Class="CompProperties_Glower">
						<overlightRadius>7.0</overlightRadius>
						<glowRadius>15</glowRadius>
						<glowColor>(370,370,370,0)</glowColor>
					</li>
				</value>
  </match>
  </Operation>
  
  <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_EssentialsSupplier</li>
    </value>
  </Operation>

  <!-- Add ISA insectoid to hives -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[Name="Hive"]/comps/CompProperties_SpawnerPawn/spawnablePawnKinds</xpath>
    <value>
      <li>ISA_Gigapede</li>
      <li>ISA_Gigaspider</li>
      <li>ISA_Gigabeetle</li>
    </value>
  </Operation>

</Patch>

<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
    <value>
    <li>ISA_Caravan_EssentialsSupplier</li>
    </value>
  </Operation>

  <!-- Add ISA insectoid to hives -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[Name="Hive"]/comps/li[@Class = "CompProperties_SpawnerPawn"]/spawnablePawnKinds</xpath>
    <value>
      <li>ISA_Gigapede</li>
      <li>ISA_Gigaspider</li>
      <li>ISA_Gigabeetle</li>
    </value>
  </Operation>

</Patch>

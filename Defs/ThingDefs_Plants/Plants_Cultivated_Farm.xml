<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Food crops ==============================-->
  <ThingDef ParentName="PlantBase">
    <defName>ISA_Plant_Carrot</defName>
    <label>carrot plant</label>
    <description>A fast-growing crop that yields carrots. Its great nutritional output and ease of cultivation has made it the economic core of many great civilizations. It isn't sensitive to soil fertility and will fare well in poor soil.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/RicePlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>ISA_RawCarrot</harvestedThingDef>
      <harvestYield>5</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <harvestFailable>false</harvestFailable>
      <topWindExposure>0.1</topWindExposure>
      <growDays>4</growDays>
      <visualSizeRange>0.3~0.8</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <humanFoodPlant>true</humanFoodPlant>
    </plant>
  </ThingDef>
  </Defs>

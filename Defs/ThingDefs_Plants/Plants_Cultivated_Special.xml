<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>ISA_Plant_Calidumix</defName>
    <label>calidumix</label>
    <description>A medium sized mushroom. When fully matured, its cap spreads open to release an inner bulb that emits heat and a bit of light, it's due to a chemical reaction with the oxigen in the air.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Armillarix/AMature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <neverBlightable>true</neverBlightable>
      <growMinGlow>0</growMinGlow>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawFungus</harvestedThingDef>
      <harvestYield>20</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <sowMinSkill>10</sowMinSkill>
	  <sowWork>400</sowWork>
      <topWindExposure>0.05</topWindExposure>
      <growDays>10</growDays>
      <visualSizeRange>0.4~0.85</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <immatureGraphicPath>Things/Armillarix/AImmature</immatureGraphicPath>
    </plant>
    <comps>
    <li Class="CompProperties_HeatPusher">
      <compClass>CompHeatPusherPowered</compClass>
      <heatPerSecond>10</heatPerSecond>
      <heatPushMaxTemperature>30</heatPushMaxTemperature>
    </li>
    <li Class="CompProperties_Glower">
      <glowRadius>3</glowRadius>
      <glowColor>(370,370,370,0)</glowColor>
    </li>
    </comps>
  </ThingDef>

</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<RecipeDef>
    <defName>ISA_MakeBiofuelFromWood</defName>
    <label>make biofuel</label>
    <description>Make a batch of biofuel by extracting it from wood.</description>
    <jobString>Making biofuel.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Wood</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Wood</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Wood>20</Wood>
    </products>
    <researchPrerequisite>BiofuelRefining</researchPrerequisite>
  </RecipeDef>
    
  <RecipeDef>
    <defName>ISA_MakeBiofuelFromOrganics</defName>
    <label>make biofuel from organics</label>
    <description>Make a batch of biofuel by extracting it from organic feedstocks.</description>
    <jobString>Refining biofuel from organics.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2700</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Foods</li>
            <li>PlantMatter</li>
          </categories>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
        </filter>
        <count>3.5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Foods</li>
        <li>PlantMatter</li>
      </categories>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <disallowedCategories>
        <li>MeatRaw</li>
        <li>AnimalProductRaw</li>
      </disallowedCategories>
    </defaultIngredientFilter>
    <products>
      <ISA_Biofuel>35</ISA_Biofuel>
    </products>
  </RecipeDef>
</Defs>

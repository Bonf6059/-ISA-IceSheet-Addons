<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
<!-- Biofuel from wood log -->
<RecipeDef>
    <defName>ISA_MakeBiofuelFromWood</defName>
    <label>make biofuel</label>
    <description>Make a batch of biofuel by extracting it from wood.</description>
    <jobString>Making biofuel.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WoodLog>20</WoodLog>
    </products>
    <researchPrerequisite>BiofuelRefining</researchPrerequisite>
  </RecipeDef>

<!-- Biofuel from organic matter -->
<RecipeDef>
    <defName>ISA_MakeBiofuelFromOrganics</defName>
    <label>make biofuel from organics</label>
    <description>Make a batch of biofuel by extracting it from organic feedstocks.</description>
    <jobString>Making biofuel.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Foods</li>
            <li>PlantMatter</li>
          </categories>
          <disallowedCategories>
            <li>FoodMeals</li>
          </disallowedCategories>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Foods</li>
        <li>PlantMatter</li>
      </categories>
      <disallowedCategories>
        <li>FoodMeals</li>
      </disallowedCategories>
    </fixedIngredientFilter>
    <products>
      <ISA_Biofuel>35</ISA_Biofuel>
    </products>
    <researchPrerequisite>BiofuelRefining</researchPrerequisite>
  </RecipeDef>
</Defs>

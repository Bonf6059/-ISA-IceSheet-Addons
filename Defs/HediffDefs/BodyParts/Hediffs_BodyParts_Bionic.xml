<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>ISABionicInsulator</defName>
    <label>bionic insulator</label>
    <labelNoun>a bionic insulator</labelNoun>
    <description>An installed bionic insulator.</description>
    <descriptionHyperlinks><ThingDef>ISABionicInsulator</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>ISABionicInsulator</spawnThingOnRemoved>
    <woundAnchorRange>0</woundAnchorRange>
    <displayWound>true</displayWound>
    <addedPartProps>
      <solid>true</solid>
      <ComfyTemperatureMin>-35</ComfyTemperatureMin>
			<betterThanNatural>true</betterThanNatural>
    </addedPartProps>
  </HediffDef>

  <ThingDef ParentName="BodyPartBionicBase">
    <defName>ISABionicInsulator</defName>
    <label>bionic insulator</label>
    <description>An advanced artificial eye. With its biogel nerve-link, internal signal pre-processor, and wide-spectrum sensors, it is better than a biological eye in almost every way. A lattice-dust healing system allows it to recover from damage.</description>
    <descriptionHyperlinks><RecipeDef>ISABionicInsulator</RecipeDef></descriptionHyperlinks>
    <costList>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <statBases>
      <Mass>0.3</Mass>
    </statBases>
    <thingCategories>
      <li>BodyPartsBionic</li>
    </thingCategories>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>InstallISABionicInsulator</defName>
    <label>install bionic insulator</label>
    <description>Install a bionic insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISABionicInsulator</ThingDef>
      <HediffDef>ISABionicInsulator</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic insulator.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISABionicInsulator</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISABionicInsulator</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ISABionicInsulator</addsHediff>
  </RecipeDef>
  
</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  
  <!-- Insulator Cold -->
  <HediffDef ParentName="ImplantHediffBase">
    <defName>ISA_BionicInsulatorCold</defName>
    <label>bionic cold insulator</label>
    <description>Installed bionic cold insulator.</description>
    <descriptionHyperlinks><ThingDef>ISA_BionicInsulatorCold</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>ISA_BionicInsulatorCold</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Heat>0.2</ArmorRating_Heat>
          <ComfyTemperatureMin>-36</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <ThingDef ParentName="BodyPartBionicBase">
    <defName>ISA_BionicInsulatorCold</defName>
    <label>bionic cold insulator</label>
    <description>This small patch of artificial skin quickly spreads to cover the user's body. Bionic cold insulator skin resists lower temperatures than biological skin. It looks and feels like natural flesh, but even if it is harmed, it repairs itself over time.</description>
    <descriptionHyperlinks><RecipeDef>ISA_InstallBionicInsulatorCold</RecipeDef></descriptionHyperlinks>
    <costList>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <statBases>
      <MarketValue>2800</MarketValue>
      <Mass>0.3</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>ISA_InstallBionicInsulatorCold</defName>
    <label>install bionic cold insulator</label>
    <description>Install bionic cold insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISA_BionicInsulatorCold</ThingDef>
      <HediffDef>ISA_BionicInsulatorCold</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic cold insulator.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_BionicInsulatorCold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_BionicInsulatorCold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ISA_BionicInsulatorCold</addsHediff>
    <incompatibleWithHediffTags>
      <li>ISA_BionicInsulatorHot</li>
    </incompatibleWithHediffTags>
  </RecipeDef>
  
  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>RemoveISA_BionicInsulatorCold</defName>
    <label>remove bionic cold insulator</label>
    <description>Remove bionic cold insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISA_BionicInsulatorCold</ThingDef>
      <HediffDef>ISA_BionicInsulatorCold</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing bionic cold insulator.</jobString>
    <removesHediff>ISA_BionicInsulatorCold</removesHediff>
  </RecipeDef>
  
  

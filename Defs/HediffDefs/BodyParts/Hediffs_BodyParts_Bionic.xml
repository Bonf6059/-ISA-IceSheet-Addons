<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  
  <!-- Insulator Cold -->
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>ISA_BionicInsulatorCold</defName>
    <label>bionic cold insulator</label>
    <labelNoun>a bionic that protects from the cold</labelNoun>
    <description>An installed bionic cold insulator.</description>
    <descriptionHyperlinks><ThingDef>ISA_BionicInsulatorCold</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>ISA_BionicInsulatorCold</spawnThingOnRemoved>
    <woundAnchorRange>0</woundAnchorRange>
    <displayWound>true</displayWound>
    <addedPartProps>
      <solid>true</solid>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Heat>0.25</ArmorRating_Heat>
          <ComfyTemperatureMin>-36</ComfyTemperatureMin>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <ThingDef ParentName="BodyPartBionicBase">
    <defName>ISA_BionicInsulatorCold</defName>
    <label>bionic cold insulator</label>
    <description>An advanced artificial eye. With its biogel nerve-link, internal signal pre-processor, and wide-spectrum sensors, it is better than a biological eye in almost every way. A lattice-dust healing system allows it to recover from damage.</description>
    <descriptionHyperlinks><RecipeDef>ISA_BionicInsulatorCold</RecipeDef></descriptionHyperlinks>
    <costList>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <thingSetMakerTags><li>RewardStandardMidFreq</li></thingSetMakerTags>
    <statBases>
      <MarketValue>2400</MarketValue>
      <Mass>0.3</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>InstallISA_BionicInsulatorCold</defName>
    <label>install bionic insulator</label>
    <description>Install a bionic insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISA_BionicInsulatorCold</ThingDef>
      <HediffDef>ISA_BionicInsulatorCold</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic cold insulator.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_BionicInsulatorCold</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_BionicInsulatorCold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ISA_BionicInsulatorCold</addsHediff>
    <incompatibleWithHediffTags>
      <li>ArmorGland</li>
    </incompatibleWithHediffTags>
  </RecipeDef>
  
  
  <!-- Insulator hot-->
  <HediffDef ParentName="ImplantHediffBase">
    <defName>ISA_BionicInsulatorHot</defName>
    <label>bionic hot insulator</label>
    <description>Installed bionic hot insulator.</description>
    <descriptionHyperlinks><ThingDef>ISA_BionicInsulatorHot</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>ISA_BionicInsulatorHot</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Heat>0.4</ArmorRating_Heat>
          <ComfyTemperatureMax>24</ComfyTemperatureMax>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <ThingDef ParentName="BodyPartBionicBase">
    <defName>ISA_BionicInsulatorHot</defName>
    <label>bionic hot insulator</label>
    <description>This small patch of artificial skin quickly spreads to cover the user's body. Archotech skin resists pressure changes and offers complete immunity to vaccum depressurization, as well as providing significant armor and temperature insulation. In conjunction with archotech lungs, it offers the ability to survive vacuum indefinitely. It looks and feels like natural flesh, but is harder to damage than plasteel. Even if it is harmed, it repairs itself over time. Its internal workings are a mystery to all human minds.</description>
    <descriptionHyperlinks><RecipeDef>InstallISA_BionicInsulatorHot</RecipeDef></descriptionHyperlinks>
    <costList>
      <Plasteel>30</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <statBases>
      <MarketValue>2800</MarketValue>
      <Mass>0.3</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallISA_BionicInsulatorHot</defName>
    <label>install bionic hot insulator</label>
    <description>Install bionic hot insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISA_BionicInsulatorHot</ThingDef>
      <HediffDef>ISA_BionicInsulatorHot</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic hot insulator.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_BionicInsulatorHot</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_BionicInsulatorHot</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ISA_BionicInsulatorHot</addsHediff>
    <incompatibleWithHediffTags>
      <li>ArmorGland</li>
    </incompatibleWithHediffTags>
  </RecipeDef>
  
  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>RemoveISA_BionicInsulatorHot</defName>
    <label>remove bionic hot insulator</label>
    <description>Remove bionic hot insulator.</description>
    <descriptionHyperlinks>
      <ThingDef>ISA_BionicInsulatorHot</ThingDef>
      <HediffDef>ISA_BionicInsulatorHot</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing bionic hot insulator.</jobString>
    <removesHediff>ISA_BionicInsulatorHot</removesHediff>
  </RecipeDef>
  
</Defs>

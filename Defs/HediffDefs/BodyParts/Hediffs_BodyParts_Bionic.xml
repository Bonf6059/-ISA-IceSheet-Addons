    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_PlasteelClaw</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Hand</li>
    </appliedOnFixedBodyParts>
    <addsHediff>ISA_PlasteelClaw</addsHediff>
  </RecipeDef>

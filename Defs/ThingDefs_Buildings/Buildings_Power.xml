<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
    <defName>ISA_NuclearGenerator</defName>
    <label>Nuclear generator</label>
    <description>Produces power by consuming uranium. Scientist discovered a way to contain the immense heat produced by the fission of the atom making it possible to reduce the power plant to a single generator but with a big loss in power production.</description>
    <thingClass>Building</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Power/WoodFiredGenerator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(7,7)</drawSize>
      <shadowData>
        <volume>(1.93,1,1.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>100</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>1.0</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>-30</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <canOverlapZones>false</canOverlapZones>
    <size>(7,7)</size>
    <building>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <costList>
      <Steel>300</Steel>
      <Plasteel>75</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-7200</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
        <soundAmbientProducingPower>WoodFiredGenerator_Ambience</soundAmbientProducingPower>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>12.0</fuelConsumptionRate>
        <fuelCapacity>150.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2</explosiveRadius>
        <explosiveExpandPerFuel>0.95</explosiveExpandPerFuel>
        <explosiveDamageType>Flame</explosiveDamageType>
        <destroyThingOnExplosionSize>2</destroyThingOnExplosionSize>
        <startWickHitPointsPercent>0.333</startWickHitPointsPercent>
        <preExplosionSpawnChance>1</preExplosionSpawnChance>
        <wickTicks>150~210</wickTicks>
      </li>
    </comps>
    </comps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>Fabrication</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
  </ThingDef>
